{
  "root": true,
  "extends": "eslint:recommended",  
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "rules": {
    "constructor-super": "warn", 
    "linebreak-style": ["warn", "unix"],
    "no-const-assign": "warn", 
    "no-this-before-super": "warn", 
    "no-undef": "warn", 
    "no-unreachable": "warn", 
    "no-unused-vars": "warn", 
    "prefer-destructuring": "warn",
    "valid-typeof": "warn"
  }
}